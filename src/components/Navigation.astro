---
import {t, l} from "astro-i18n";

import LanguagePicker from "./language-picker/LanguagePicker.astro";
---

<div class="my-watercolor-paper-texture navbar sticky top-0 z-[1] px-2 lg:px-10">
  <div class="navbar-start">
    <div class="dropdown lg:hidden">
      <!--Mobile Dropdown-->
      <label tabindex="0" class="btn btn-ghost">
        <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </label>

      <ul tabindex="0" class="menu dropdown-content z-[1] mt-3 w-52 rounded-box bg-white p-2 shadow">
        <li><a href={l("/place")}>{t("nav.place")}</a></li>
        <li><a href={l("/participation")}>{t("nav.participation")}</a></li>

        <li>
          <a>{t("nav.more")}</a>
          <ul class="p-2">
            <li><a>Submenu 1</a></li>
            <li><a>Submenu 2</a></li>
          </ul>
        </li>
      </ul>
    </div><!--Mobile Dropdown-->

    <a href={l("/")} class="btn btn-outline btn-primary text-xl normal-case">Ivana & Peter</a>
  </div>

  <div class="navbar-center hidden lg:flex">
    <a class="btn btn-ghost" href={l("/place")}>{t("nav.place")}</a>
    <a class="btn btn-ghost" href={l("/participation")}>{t("nav.participation")}</a>

    <div class="dropdown dropdown-bottom">
      <label tabindex="0" class="btn btn-ghost">
        <span>{t("nav.more")}</span>
        <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
        </svg>
      </label>
      <ul tabindex="0" class="menu dropdown-content z-[1] w-52 rounded-box bg-white p-2 shadow">
        <li><a>Item 1</a></li>
        <li><a>Item 2</a></li>
      </ul>
    </div>
  </div>

  <div class="navbar-end">
    <LanguagePicker />
  </div>
</div>
