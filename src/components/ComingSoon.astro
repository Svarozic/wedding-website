---
import {l, t} from "astro-i18n";

import Container from "./Container.astro";
import Paragraph from "./Paragraph.astro";
import Headline from "./Headline.astro";

interface Props {
  headline: string;
  statement: string;
}

const {headline = t("comingSoon"), statement = t("comingSoonStatement")} = Astro.props;
---

<div class="flex flex-col items-center">
  <div
    class="hero h-140 max-h-140 bg-no-repeat lg:bg-contain"
    style="background-image: url(/assets/drawing_splatter.png);">
    <div class="hero-content text-center">
      <Container>
        <Headline>
          {headline}
        </Headline>
        <Paragraph>
          {statement}
        </Paragraph>

        <a href={l("/")} class="g:my-8 btn my-4">
          <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"
            ></path>
          </svg>
          {t("nav.home")}</a
        >
      </Container>
    </div>
  </div>
</div>
