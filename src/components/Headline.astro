---
interface Props {
  top?: string;
  bottom?: string;
}

const {top, bottom} = Astro.props;
---

{top != null && <h2 class="text-2xl uppercase text-primary">{top}</h2>}
<h1 class="my-6 text-4xl uppercase"><slot /></h1>
{bottom != null && <h2 class="mb-4 text-2xl uppercase text-primary">{bottom}</h2>}
