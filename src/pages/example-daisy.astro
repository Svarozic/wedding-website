---
import BaseLayout from "@src/layouts/BaseLayout.astro";
---

<BaseLayout title="example-daisy">
  <article class="prose lg:prose-xl">
    <div tabindex="0" class="collapse bg-base-100">
      <div class="collapse-title text-xl font-medium">bg-base-100</div>
    </div>

    <div tabindex="0" class="collapse bg-base-200">
      <div class="collapse-title text-xl font-medium">bg-base-200</div>
    </div>

    <div tabindex="0" class="collapse bg-base-300">
      <div class="collapse-title text-xl font-medium">bg-base-300</div>
    </div>
  </article>
  <article class="prose lg:prose-xl">
    <h3>Button</h3>

    <h4>Buttons with brand colors</h4>
    <p>
      <button class="btn">Button</button>
      <button class="btn btn-neutral">Neutral</button>
      <button class="btn btn-primary">Primary</button>
      <button class="btn btn-secondary">Secondary</button>
      <button class="btn btn-accent">Accent</button>
      <button class="btn btn-ghost">Ghost</button>
      <button class="btn btn-link">Link</button>
    </p>

    <h4>Outline buttons</h4>
    <p>
      <button class="btn btn-outline">Default</button>
      <button class="btn btn-primary btn-outline">Primary</button>
      <button class="btn btn-secondary btn-outline">Secondary</button>
      <button class="btn btn-accent btn-outline">Accent</button>
    </p>
  </article>
</BaseLayout>
