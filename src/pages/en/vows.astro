---
import {t} from "astro-i18n";
import BaseLayout from "@src/layouts/BaseLayout.astro";
import Container from "@src/components/Container.astro";
import Headline from "@src/components/Headline.astro";
import CountdownHeadline from "@src/components/CountdownHeadline.astro";
import CountdownVow from "@src/components/CountdownVow.astro";
import Paragraph from "@src/components/Paragraph.astro";
import FlowerDivider from "@src/components/FlowerDivider.astro";

import assetPeter from "@src/assets/20200829_115859.jpg?url";
import assetIvana from "@src/assets/20210202_215046.jpg?url";
---

<BaseLayout>
  <Container>
    <Headline top={t("vows.our")}>{t("nav.vows")}</Headline>

    <Paragraph>
      {t("vows.statement")}
    </Paragraph>
  </Container>

  <Container>
    <div class="grid place-items-center gap-4 lg:grid-cols-2 lg:gap-20">
      <div>
        <div class="card card-compact bg-white shadow-xl">
          <figure><img class="saturate-50" src={assetIvana} alt="Ivana" /></figure>
          <div class="card-body">
            <Headline>Ivana</Headline>

            <div class="mb-2 justify-center lg:mb-4">
              <CountdownHeadline />
            </div>

            <CountdownVow translationKey="ivana" />
          </div>
        </div>
      </div>

      <div>
        <div class="card card-compact bg-white shadow-xl">
          <figure><img class="saturate-50" src={assetPeter} alt="Peter" /></figure>
          <div class="card-body">
            <Headline>Peter</Headline>

            <div class="mb-2 justify-center lg:mb-4">
              <CountdownHeadline />
            </div>

            <CountdownVow translationKey="peter" />
          </div>
        </div>
      </div>
    </div>
  </Container>

  <FlowerDivider type="2" />
</BaseLayout>
