---
import {t} from "astro-i18n";
import BaseLayout from "@src/layouts/BaseLayout.astro";
import Container from "@src/components/Container.astro";
import Headline from "@src/components/Headline.astro";
import Countdown from "@src/components/Countdown";

import assetPeter from "@src/assets/20200829_115859.jpg?url";
import assetIvana from "@src/assets/20210202_215046.jpg?url";

// SVARGA: implement countdown and to show text !
---

<BaseLayout>
  <Container>
    <div class="flex flex-col items-center text-center">
      <Headline top={t("vows.our")}>{t("nav.vows")}</Headline>
    </div>
  </Container>

  <Container>
    <div class="grid place-items-center gap-20 lg:grid-cols-2">
      <div>
        <div class="card image-full bg-base-100 shadow-xl">
          <figure><img src={assetIvana} alt="Ivana" /></figure>
          <div class="card-body">
            <h2
              class="pb-6 pt-2 text-center text-4xl font-bold lg:pb-12 lg:pt-4 lg:text-5xl lg:tracking-tight xl:text-6xl">
              Ivana
            </h2>

            <div class="card-actions justify-center">
              <Countdown client:idle />
            </div>
          </div>
        </div>
      </div>

      <div>
        <div class="card image-full bg-base-100 shadow-xl">
          <figure><img src={assetPeter} alt="Peter" /></figure>
          <div class="card-body">
            <h2
              class="pb-6 pt-2 text-center text-4xl font-bold lg:pb-12 lg:pt-4 lg:text-5xl lg:tracking-tight xl:text-6xl">
              Peter
            </h2>

            <div class="card-actions justify-center">
              <Countdown client:idle />
            </div>
          </div>
        </div>
      </div>
    </div>
  </Container>
</BaseLayout>
