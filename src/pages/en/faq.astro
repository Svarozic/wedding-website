---
import {t, astroI18n, l} from "astro-i18n";

import BaseLayout from "@src/layouts/BaseLayout.astro";
import ChatFaq from "@src/components/ChatFaq.astro";
import Container from "@src/components/Container.astro";
import Headline from "@src/components/Headline.astro";
import Paragraph from "@src/components/Paragraph.astro";
import FlowerDivider from "@src/components/FlowerDivider.astro";
import Center from "@src/components/Center.astro";
---

<BaseLayout>
  <Container>
    <Headline top={t("nav.faq")}>{t("faq.headline")}</Headline>

    <ChatFaq qaToken="Rsvp" />
    <ChatFaq qaToken="Address" />
    <ChatFaq qaToken="Transport" />
    <ChatFaq qaToken="Parking" />
    <ChatFaq qaToken="Accommodation" />
    <ChatFaq qaToken="Outdoors" />
    <ChatFaq qaToken="Program" href={l("/program")} />
    {"sr" !== astroI18n.locale && <ChatFaq qaToken="PlusOne" />}
    <ChatFaq qaToken="Kids" />
    <ChatFaq qaToken="DressCode" href="https://www.hoteleurobus.sk/galeria" />
    <ChatFaq qaToken="Temperature" />
    <ChatFaq qaToken="Gift" />
    <ChatFaq qaToken="Food" />
    <ChatFaq qaToken="Languages" />
    <ChatFaq qaToken="Speech" />
    <ChatFaq qaToken="Kosice" href={l("/slovakia")} />
    <ChatFaq qaToken="TravelBreaks" href={l("/slovakia")} />
    <ChatFaq qaToken="Updates" />

    <Center class="mt-20">
      <Paragraph>
        {t("faq.furtherInfo")}
      </Paragraph>
    </Center>
  </Container>

  <FlowerDivider type="2" />
</BaseLayout>
