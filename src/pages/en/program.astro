---
import {l, t} from "astro-i18n";

import BaseLayout from "@src/layouts/BaseLayout.astro";
import Container from "@src/components/Container.astro";
import Headline from "@src/components/Headline.astro";
import FlowerDivider from "@src/components/FlowerDivider.astro";
import Center from "@src/components/Center.astro";
import TimelineItem from "@src/components/TimelineItem.astro";
---

<BaseLayout>
  <Container>
    <Headline top={t("nav.program")}>{t("program.headline")}</Headline>
  </Container>

  <Container>
    <ul class="timeline timeline-vertical timeline-snap-icon max-md:timeline-compact">
      <TimelineItem time="13:00" translationKey="welcome" />

      <TimelineItem time="14:00" translationKey="ceremony" side="right" big />

      <TimelineItem time="15:00" translationKey="congratulations" />

      <TimelineItem time="15:30" translationKey="foto" side="right" />

      <TimelineItem time="17:00" translationKey="breakingPlate" tradition />

      <TimelineItem time="18:30" translationKey="dinner" side="right" />

      <TimelineItem time="20:00" translationKey="party" />

      <TimelineItem time="21:00" translationKey="cake" side="right" />

      <TimelineItem time="21:45" translationKey="kolo" tradition />

      <TimelineItem time="22:00" translationKey="buffet" side="right" />

      <TimelineItem time="23:30" translationKey="cepcenie" tradition />

      <TimelineItem time="02:30" translationKey="kapurkova" tradition side="right" />
    </ul>

    <Center class="mt-20">
      <p class="text-xs text-base-content/50">{t("program.change")}</p>
    </Center>
  </Container>

  <FlowerDivider type="2" />
</BaseLayout>
