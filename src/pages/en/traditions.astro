---
import {t} from "astro-i18n";
import BaseLayout from "@src/layouts/BaseLayout.astro";
import Container from "@src/components/Container.astro";
import Headline from "@src/components/Headline.astro";
import SmallHeadline from "@src/components/SmallHeadline.astro";
import Paragraph from "@src/components/Paragraph.astro";
import FlowerDivider from "@src/components/FlowerDivider.astro";
import Center from "@src/components/Center.astro";
---

<BaseLayout>
  <Container>
    <Headline top={t("traditions.headlineTop")}>{t("nav.traditions")}</Headline>
    <Paragraph>
      {t("traditions.statement")}
    </Paragraph>

    <FlowerDivider type="2" />

    <SmallHeadline>{t("traditions.plate")}</SmallHeadline>
    <Paragraph>{t("traditions.plateDesc")}</Paragraph>
    <Center>
      <iframe
        class="lg:h-100 h-80 w-full max-w-140 rounded-lg shadow-xl"
        width="560"
        height="315"
        src="https://www.youtube.com/embed/QM-hvny6NRc?si=6Kszzh6i7NwBLsPW"
        title="YouTube video player"
        frameborder="0"
        allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
        referrerpolicy="strict-origin-when-cross-origin"
        allowfullscreen></iframe>
    </Center>

    <FlowerDivider type="3" class="pt-8 lg:pt-16" />

    <SmallHeadline>{t("traditions.kiss")}</SmallHeadline>
    <Paragraph>{t("traditions.kissDesc")}</Paragraph>

    <FlowerDivider type="1" class="pt-8 lg:pt-16" />

    <SmallHeadline>{t("traditions.soup")}</SmallHeadline>
    <Paragraph>{t("traditions.soupDesc")}</Paragraph>
    <Center>
      <iframe
        class="lg:h-100 h-80 w-full max-w-140 rounded-lg shadow-xl"
        width="560"
        height="315"
        src="https://www.youtube.com/embed/uhzc3WuJBzQ?si=cMasNNQu6YxbNOnm"
        title="YouTube video player"
        frameborder="0"
        allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
        referrerpolicy="strict-origin-when-cross-origin"
        allowfullscreen></iframe>
    </Center>

    <FlowerDivider type="2" class="pt-8 lg:pt-16" />

    <SmallHeadline>{t("traditions.kolo")}</SmallHeadline>
    <Paragraph>{t("traditions.koloDesc")}</Paragraph>
    <Center>
      <iframe
        class="lg:h-100 h-80 w-full max-w-140 rounded-lg shadow-xl"
        width="560"
        height="315"
        src="https://www.youtube.com/embed/R4ZHYAeFF88?si=_C4kZEUY_a3tJJoQ"
        title="YouTube video player"
        frameborder="0"
        allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
        referrerpolicy="strict-origin-when-cross-origin"
        allowfullscreen></iframe>
    </Center>

    <FlowerDivider type="3" class="pt-8 lg:pt-16" />

    <SmallHeadline>{t("traditions.cepcenie")}</SmallHeadline>
    <Paragraph class="!pb-0">{t("traditions.cepcenieDesc1")}</Paragraph>
    <Paragraph class="!pb-0">{t("traditions.cepcenieDesc2")}</Paragraph>
    <Paragraph class="!pb-0">{t("traditions.cepcenieDesc3")}</Paragraph>
    <Paragraph class="!pb-0">{t("traditions.cepcenieDesc4")}</Paragraph>
    <Paragraph class="!pb-0">{t("traditions.cepcenieDesc5")}</Paragraph>
    <Paragraph>{t("traditions.cepcenieDesc6")}</Paragraph>
    <Center>
      <iframe
        class="lg:h-100 h-80 w-full max-w-140 rounded-lg shadow-xl"
        width="560"
        height="315"
        src="https://www.youtube.com/embed/5ctR3GMux9A?si=O4xSMJUpaP-wTmNr"
        title="YouTube video player"
        frameborder="0"
        allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
        referrerpolicy="strict-origin-when-cross-origin"
        allowfullscreen></iframe>
    </Center>

    <FlowerDivider type="1" class="pt-8 lg:pt-16" />

    <SmallHeadline>{t("traditions.kapurkova")}</SmallHeadline>
    <Paragraph>{t("traditions.kapurkovaDesc")}</Paragraph>
  </Container>

  <FlowerDivider type="2" />
</BaseLayout>
