---
import {t, astroI18n, l} from "astro-i18n";
import {ViewTransitions} from "astro:transitions";

import "@src/global.css";
import Navigation from "@src/components/Navigation.astro";
import GlobalStyles from "@src/components/GlobalStyles.astro";
import Container from "@src/components/Container.astro";

const {title} = Astro.props.frontmatter || Astro.props;

const htmlTitle = title ?? t("title");
---

<html lang={astroI18n.locale} data-theme="cupcake">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="generator" content={Astro.generator} />

    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <title>{htmlTitle}</title>
    <ViewTransitions />

    <GlobalStyles />
  </head>

  <body class="my-watercolor-paper-texture">
    <Navigation />

    <main>
      <slot />
    </main>

    <Container>
      <footer class="footer gap-2">
        <aside>
          <a class="link-hover link footer-title" href={l("/")}><h6>{t("title")}</h6></a>
          <a href="mailto:ivanapeter2024@gmail.com" class="link-hover link">ivanapeter2024@gmail.com</a>
          <p class="text-primary-content/40">Copyright Â© 2024</p>
          <p class="text-primary-content/40">All rights reserved</p>
        </aside>

        <nav>
          <h6 class="footer-title">&nbsp;</h6>
          <a class="link flex items-center gap-1" href={l("/")}
            >{t("nav.home")}
            <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"
              ></path>
            </svg></a
          >
          <a class="link" href={l("/place")}>{t("nav.place")}</a>
          <a class="link" href={l("/participation")}>{t("nav.participation")}</a>
        </nav>

        <nav>
          <h6 class="footer-title">{t("nav.more")}</h6>
          <a class="link">About us</a>
          <a class="link">Contact</a>
        </nav>
      </footer>
    </Container>
  </body>
</html>
